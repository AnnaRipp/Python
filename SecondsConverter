seg_str = (input("Insira os segundos para converter: "))
seg = int(seg_str)

dias = seg // 86400
seg_rest1 = seg % 86400

horas = seg_rest1 // 3600
seg_rest2 = seg_rest1 % 3600

minutos = seg_rest2 // 60

seg_rest_final = seg_rest2 % 60

print(dias, "dias,", horas, "horas,", minutos, "minutos e", seg_rest_final, "segundos.")
